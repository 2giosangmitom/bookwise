{
  "name": "bookwise",
  "description": "Monorepo for Bookwise project",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky",
    "format": "prettier --write",
    "format:check": "prettier -c"
  },
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": {
    "printWidth": 120
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,mjs}": [
      "pnpm lint --",
      "pnpm format:check"
    ]
  }
}
