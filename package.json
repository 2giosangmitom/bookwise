{
  "name": "bookwise",
  "description": "Monorepo for Bookwise project",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "prepare": "husky",
    "format": "prettier --write ."
  },
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.7.5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": {
    "printWidth": 120
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,mjs}": [
      "pnpm lint --"
    ]
  }
}
