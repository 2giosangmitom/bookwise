{
  "name": "@bookwise/api",
  "version": "1.0.0",
  "description": "API server for the Bookwise project",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs -d src/database/datasource.ts",
    "migration:generate": "dotenvx run -- pnpm typeorm migration:generate --pretty",
    "migration:run": "dotenvx run -- pnpm typeorm migration:run",
    "migration:show": "dotenvx run -- pnpm typeorm migration:show",
    "prepare": "ts-patch install",
    "sdk:gen": "nestia sdk"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@bookwise/eslint-config": "workspace:*",
    "@bookwise/shared": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/static": "^9.0.0",
    "@nestia/core": "^10.0.2",
    "@nestia/e2e": "^10.0.2",
    "@nestia/fetcher": "^10.0.2",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-fastify": "^11.1.12",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/testing": "^11.1.12",
    "@nestjs/typeorm": "^11.0.0",
    "@redis/client": "^5.10.0",
    "cache-manager": "^7.2.8",
    "fastify": "^5.7.1",
    "pg": "^8.17.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "typia": "^11.0.2",
    "ua-parser-js": "^2.0.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nestia/benchmark": "^10.0.2",
    "@nestia/sdk": "^10.0.2",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nestia": "^10.0.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "typescript": "^5.9.3"
  }
}
