{
  "name": "@bookwise/api",
  "version": "1.0.0",
  "description": "API server for the Bookwise project",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs -d src/database/datasource.ts",
    "migration:generate": "dotenvx run -- pnpm typeorm migration:generate --pretty",
    "migration:run": "dotenvx run -- pnpm typeorm migration:run",
    "migration:show": "dotenvx run -- pnpm typeorm migration:show"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.966.0",
    "@aws-sdk/s3-request-presigner": "^3.966.0",
    "@bookwise/eslint-config": "workspace:*",
    "@bookwise/shared": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/redis": "^7.1.0",
    "@fastify/static": "^9.0.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-fastify": "^11.1.11",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/testing": "^11.1.11",
    "@nestjs/typeorm": "^11.0.0",
    "fastify": "^5.6.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/node": "^22.19.5",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
