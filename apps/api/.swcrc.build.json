{
  "$schema": "https://swc.rs/schema.json",
  "minify": false,
  "module": {
    "type": "commonjs"
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["src/database/datasource\\.ts", "src/database/migrations/.*", ".*\\.test\\.ts$"]
}
