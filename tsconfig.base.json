{
  "compilerOptions": {
    // Module settings
    "target": "esnext",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    // Type safety settings
    "strict": true,

    // Other settings
    "skipLibCheck": true,
    "removeComments": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}
